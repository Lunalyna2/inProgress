{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2020",
    "moduleResolution": "node",
    "types": ["node"],
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,

    "strict": true,
    "skipLibCheck": true,
    "isolatedModules": false,

    "noEmit": true,
    "verbatimModuleSyntax": false,
    "lib": ["esnext"]
  },
  "include": ["**/*.ts"],
  "exclude": ["node_modules"]
}
